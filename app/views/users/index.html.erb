<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/sidebar', book_new: @book_new, user: current_user %>
		</div>

	<div class="col-lg-9">
		<h1>Users</h1>
		<table  class="table">
    	<thead>
    		<tr>
				<th>image<th>Name<th>UserShow
    	</thead>
    			<% @users.each do |user| %>
  				<tr>
  				<td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
    			<td><%= user.name %>
    			<td>



    				<%= link_to user_path(user) do %>
    				<h4 class="glyphicon glyphicon-book text-muted">.Post<%= user.books.count %></h4>
	    					<% end %>
    			<% end %>
		</table>
	</div>
</div>
</div>
