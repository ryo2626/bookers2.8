<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/sidebar', book_new: @book_new, user: @user %>
		</div>

	<div class="col-lg-9">
		<h1>Books</h1>

					<div><%= render 'follow_form' %></div>
					<div><%= render 'stats' %>
			<table class="table table-hover">
				<thead>
				<tr>
					<th><th>title<th>opinion<th><th><th>
				</thead>

					<% @user.books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
					<td><%= link_to "#{book.title}", book_path(book.id) %>
					<td><%= book.body %>

					<td><%= link_to book_path(book) do %>
	    				<li class="list-inline"><i class="far fa-comment text-muted"><%= book.book_comments.count %></i>
	    				<% end %>

	    			<%= link_to book_path(book) do %>
            	<li class="list-inline"><i class="far fa-heart text-muted"><%= book.favorites.count %></i>
            <% end %>
					<% end %>
			</table>
	</div>
</div>
</div>