<div class="container">
  <div class="row">
		<div class="col-lg-3">
  		<%= render 'books/sidebar', book_new: @book_new, user: current_user %>
		</div>

<div class="col-lg-9">
<h1>Books</h1>

		<table class="table table-hover">
  		<thead>
  			<tr>
  			<th><th>Title<th>Opinion<th></th>
  		</thead>

    		<% @books.each do |book| %>
	  		<tr>
	  		<td>
	  			<%= link_to user_path(book.user.id) do %>
	  				<%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
					<% end %>
	    	<td><%= link_to "#{book.title}", book_path(book.id) %>
	    	<td><%= book.body %>

	    	<td><%= link_to book_path(book), class: "blink" do %><i class="far fa-comment text-muted"><%= book.book_comments.count %></i>
	    				<% end %>

	    			<%= link_to book_path(book), class: "blink" do %><i class="far fa-heart text-muted"><%= book.favorites.count %></i>
            <% end %>

    	<% end %>
		</table>
	</div>
</div>
</div>
