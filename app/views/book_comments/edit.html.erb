<div class="container">
<div class="row">
<div class="col-lg-offset">

<h2>Editing Comment</h2>

<%= form_for [@book,@comment],url: book_book_comment_path(@book,@comment) do |f| %>

	<% if @comment.errors.any? %>
    	<div class="text-danger">
      	<ul>
        <h3><%= @comment.errors.count %>errors prohibited this user from being saved:</h3>
      	</ul>
      	<ul>
        	<% @comment.errors.full_messages.each do |msg| %>
        		<p><%= msg %></p>
        	<% end %>
      	</ul>
    	</div>
  	<% end %>

  <h4>Comment</h4>
  <%= f.text_field :comment %>

  <h4><%= f.submit 'Update Comment', class:"btn btn-warning" %></h4>

<% end %>

	<%= link_to "Back", book_path(@book.id) %>

</div>
</div>
